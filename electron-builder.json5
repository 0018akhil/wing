/**
 * @see https://www.electron.build/configuration/configuration
 */
{
  appId: "co.monada.wingConsole",
  productName: "WingConsole",
  copyright: "Copyright Â© 2022 Monada",
  asar: true,
  directories: {
    output: "release",
    buildResources: "electron/resources",
  },
  files: ["dist/vite"],
  win: {
    target: [
      {
        target: "nsis",
        arch: ["x64"],
      },
    ],
    artifactName: "${productName}-v${version}-Setup.${ext}",
  },
  nsis: {
    oneClick: false,
    perMachine: false,
    allowToChangeInstallationDirectory: true,
    deleteAppDataOnUninstall: false,
  },
  mac: {
    target: ["dmg"],
    artifactName: "${productName}-v${version}.${ext}",
  },
  dmg: {
    sign: true,
  },
  linux: {
    target: ["AppImage"],
    artifactName: "${productName}-Linux-v${version}.${ext}",
  },
}
